{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./",

    "paths": {
      "@/*": ["./*"],
      "tailwind.config": ["./tailwind.config.js"],
      "nativewind": ["./node_modules/nativewind/dist/index.d.ts"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/index.jsx",
    "nativewind-env.d.ts",
    "node_modules/@gluestack-ui/themed-components/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
